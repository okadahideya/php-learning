# ===== Docker環境設定ファイル =====
# 本ファイルを .env にコピーして環境に合わせて設定してください

# ===== アプリケーション設定 =====
APP_NAME="PHP学習サンプルアプリ"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8080

# ===== データベース設定 =====
DB_CONNECTION=mysql
DB_HOST=database
DB_PORT=3306
DB_DATABASE=php_learning
DB_USERNAME=php_user
DB_PASSWORD=php_password

# MySQL root パスワード
MYSQL_ROOT_PASSWORD=root_password

# ===== Redis設定 =====
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DATABASE=0

# ===== MailHog設定（メール送信テスト用） =====
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=test@example.com
MAIL_FROM_NAME="${APP_NAME}"

# ===== セッション設定 =====
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ===== キャッシュ設定 =====
CACHE_DRIVER=redis
CACHE_PREFIX=php_learning_cache

# ===== ログ設定 =====
LOG_CHANNEL=stack
LOG_LEVEL=debug

# ===== Docker設定 =====
# Webサーバーポート
WEB_PORT=8080

# phpMyAdminポート
PHPMYADMIN_PORT=8081

# MailHogポート
MAILHOG_PORT=8025

# MySQLポート（ホスト側）
MYSQL_PORT=3306

# Redisポート（ホスト側）
REDIS_PORT_HOST=6379

# Node.jsポート
NODE_PORT=3000
VITE_PORT=5173

# ===== 開発環境設定 =====
# Xdebug設定
XDEBUG_MODE=debug
XDEBUG_CLIENT_HOST=host.docker.internal
XDEBUG_CLIENT_PORT=9003

# PHPタイムゾーン
PHP_TIMEZONE=Asia/Tokyo

# PHPメモリ制限
PHP_MEMORY_LIMIT=512M

# PHPアップロード制限
PHP_UPLOAD_MAX_FILESIZE=32M
PHP_POST_MAX_SIZE=64M

# ===== セキュリティ設定 =====
# JWT設定（使用する場合）
JWT_SECRET=your_jwt_secret_key_here
JWT_TTL=60

# API設定
API_RATE_LIMIT=60

# ===== 外部サービス設定 =====
# AWS設定（使用する場合）
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_DEFAULT_REGION=ap-northeast-1
AWS_BUCKET=your-bucket-name

# 画像アップロード設定
FILESYSTEM_DISK=local
IMAGE_MAX_SIZE=5120  # KB
ALLOWED_IMAGE_TYPES=jpeg,jpg,png,gif,webp

# ===== 監視・ログ設定 =====
# New Relic（使用する場合）
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_APPNAME="${APP_NAME}"

# Sentry（エラー監視）
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# ===== 本番環境用設定 =====
# 本番環境では以下の設定を変更してください

# セキュアな値に変更
# DB_PASSWORD=secure_production_password
# MYSQL_ROOT_PASSWORD=secure_root_password
# REDIS_PASSWORD=secure_redis_password

# デバッグを無効化
# APP_DEBUG=false
# APP_ENV=production

# HTTPSを有効化
# APP_URL=https://yourdomain.com

# セッション設定を強化
# SESSION_SECURE_COOKIE=true
# SESSION_HTTP_ONLY=true