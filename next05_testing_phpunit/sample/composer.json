{
    "name": "php-learning/phpunit-testing-sample",
    "description": "PHPUnit テスト学習用サンプルプロジェクト",
    "type": "project",
    "keywords": ["php", "testing", "phpunit", "learning", "sample"],
    "license": "MIT",
    "authors": [
        {
            "name": "PHP Learning Team",
            "email": "learning@example.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "monolog/monolog": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.5",
        "fakerphp/faker": "^1.21",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "phpmd/phpmd": "^2.13"
    },
    "autoload": {
        "psr-4": {
            "PhpLearning\\Testing\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "PhpLearning\\Testing\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "test-coverage-text": "phpunit --coverage-text",
        "test-unit": "phpunit --testsuite=Unit",
        "test-feature": "phpunit --testsuite=Feature",
        "analyse": "phpstan analyse",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "md": "phpmd src text cleancode,codesize,controversial,design,naming,unusedcode",
        "quality": [
            "@test",
            "@analyse",
            "@cs-check",
            "@md"
        ]
    },
    "scripts-descriptions": {
        "test": "全テストを実行",
        "test-coverage": "カバレッジレポート付きでテスト実行",
        "test-unit": "ユニットテストのみ実行",
        "test-feature": "機能テストのみ実行",
        "analyse": "PHPStanによる静的解析",
        "cs-check": "コーディング規約チェック",
        "cs-fix": "コーディング規約自動修正",
        "md": "PHP Mess Detectorによる品質チェック",
        "quality": "全品質チェックツールを実行"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    }
}